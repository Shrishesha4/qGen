# Environment Configuration
# Copy this file to .env and update with your values

# Required - Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Required - Secret key for JWT tokens
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@123

# Database Configuration
# DATABASE_TYPE options: sqlite or postgresql
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./data/question_bank.db
# For PostgreSQL, use format: postgresql://user:password@host:port/dbname
# DATABASE_URL=postgresql://username:password@localhost:5432/question_bank

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Configuration (Vite requires VITE_ prefix)
VITE_API_URL=http://localhost:8000

# Production Configuration
# Server ports (for docker-compose.prod.yml)
HTTP_PORT=80
HTTPS_PORT=443

# CORS Configuration
# For production, set to your domain(s)
# Multiple origins: https://example.com,https://www.example.com
CORS_ORIGINS=*

# Application Settings
MAX_FILE_SIZE_MB=50
